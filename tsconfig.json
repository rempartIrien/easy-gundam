{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"types": [
			"vite-plugin-solid-svg/types-component-solid",
			"vinxi/types/client",
			"vitest/globals",
			"@testing-library/jest-dom"
		],
		"isolatedModules": true,
		"paths": {
			"~/*": ["./src/*"]
		}
	}
}
